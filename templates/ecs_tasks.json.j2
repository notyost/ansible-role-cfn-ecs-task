{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Resources" : {
    "taskdefn": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties" : {
        "ContainerDefinitions" : [
          {% for container in ecs_tasks_container_definitions %}
          {{ container|to_json }}{% if not loop.last %}, {% endif %}
          {% endfor %}
        ],
        "Volumes": [
          {% for volume in ecs_tasks_volume_definitions %}
          {{ volume|to_json }}{% if not loop.last %}, {% endif %}
          {% endfor %}
        ]
      }
    }
  },
  "Outputs" : {
    "taskdef" : {
      "Value" : { "Ref" : "taskdefn" }
    }
  }
}
